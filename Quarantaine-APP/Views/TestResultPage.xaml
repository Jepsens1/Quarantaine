<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quarantaine_APP.Views.TestResultPage"
             Title="TestResultPage"
             xmlns:viewmodel="clr-namespace:Quarantaine_APP.ViewModels"
             x:DataType="viewmodel:TestResultViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Command="{Binding ShowLocationCommand}" Text="Location"/>
        <Button Command="{Binding CalculateDistanceCommand}" Text="Distance"/>
        <Label Text="{Binding Distance}"/>
    </VerticalStackLayout>
</ContentPage>