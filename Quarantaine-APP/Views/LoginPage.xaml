<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quarantaine_APP.Views.LoginPage"
             Title="LoginPage"
             xmlns:viewmodel="clr-namespace:Quarantaine_APP.ViewModels"
             x:DataType="viewmodel:LoginPageViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Login Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
        <Entry Placeholder="Password" Text="{Binding Password}"></Entry>
        <Button Command="{Binding LoginCommand}" Text="Login"></Button>
    </VerticalStackLayout>
</ContentPage>